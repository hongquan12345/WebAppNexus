    window.addEventListener('DOMContentLoaded', async function () {
        var serviceConSelects = document.querySelectorAll('.selectedServiceConId');
        var subServiceSelects = document.querySelectorAll('#subServiceSelect');
        var serviceSelects = document.querySelectorAll('#serviceSelect');

        async function fetchData(selectedServiceConId, subServiceSelect, serviceSelect) {
            try {
                const response = await fetch('/Home/GetSubSelection?id=' + selectedServiceConId);
                if (!response.ok) {
                    throw new Error('Error: ' + response.status);
                }
                const data = await response.json();
                console.log(data);
                subServiceSelect.innerHTML = '';
                if (data.subServiceOptions && data.subServiceOptions.length > 0) {
                    data.subServiceOptions.forEach(function (item) {
                        var option = document.createElement('option');
                        option.value = item.serviceConnectionRefId;
                        option.textContent = item.name;
                        subServiceSelect.appendChild(option);
                    });
                } else {
                    var option = document.createElement('option');
                    option.value = '';
                    option.textContent = '---null---';
                    subServiceSelect.appendChild(option);
                }
                if (subServiceSelect.value) {
                    var selectedSubServiceId = subServiceSelect.value;
                    try {
                        const response = await fetch('/Home/GetServiceSelection?id=' + selectedSubServiceId);
                        if (!response.ok) {
                            throw new Error('Error: ' + response.status);
                        }
                        const data = await response.json();
                        console.log(data);
                        serviceSelect.innerHTML = '';
                        if (data.services && data.services.length > 0) {
                            data.services.forEach(function (item) {
                                var option = document.createElement('option');
                                option.value = item.serviceId;
                                option.textContent = item.name;
                                serviceSelect.appendChild(option);
                            });
                        } else {
                            var option = document.createElement('option');
                            option.value = '';
                            option.textContent = '---null---';
                            serviceSelect.appendChild(option);
                        }
                    } catch (error) {
                        console.error(error);
                    }
                }
            } catch (error) {
                console.error(error);
            }
        }

        for (var i = 0; i < serviceConSelects.length; i++) {
            var selectedServiceConId = serviceConSelects[i].value;
            var subServiceSelect = subServiceSelects[i];
            var serviceSelect = serviceSelects[i];
            try {
                await fetchData(selectedServiceConId, subServiceSelect, serviceSelect);
            } catch (error) {
                console.error(error);
            }
        }
    });
    $('.btn.primary-btn-outline').click(function () {
