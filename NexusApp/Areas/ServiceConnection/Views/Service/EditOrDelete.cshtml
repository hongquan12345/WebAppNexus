@model NexusApp.Areas.ServiceConnection.Models.ServiceModel

@{
    ViewData["Title"] = "Update Or Delete";
}

<h1>Update Or Delete Service</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrDelete" method="post">
            <input asp-for="ServiceId" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicePrice" class="control-label"></label>
                <input asp-for="ServicePrice" class="form-control" type="number" />
                <span asp-validation-for="ServicePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <select asp-for="Duration" class="form-control" >
                    <option value="1">1 month</option>
                    <option value="3">3 month</option>
                    <option value="6">6 month</option>
                    <option value="12">12 Months</option>
                </select>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubServiceConnectionRefId" class="control-label"></label>
                <select asp-for="SubServiceConnectionRefId" class="form-control" asp-items="ViewBag.noDepartxxy"></select>
            </div>
            <br />
            <div style="display:flex;flex-direction=row">
                <input type="submit" value="Update" name="submit" class="btn btn-primary" /> &emsp; &emsp;
                <input onclick="return confirm('Are you sure to delete?')" type="submit" value="Delete" name="submit" class="btn btn-danger" />
            </div>

        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

