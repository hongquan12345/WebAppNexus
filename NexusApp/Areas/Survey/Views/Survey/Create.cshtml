@model NexusApp.Areas.Survey.Models.SurveyModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Survey</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="ServeyName" class="control-label"></label>
                <input asp-for="ServeyName" class="form-control" />
                <span asp-validation-for="ServeyName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEquipment" checked /> @Html.DisplayNameFor(model => model.IsEquipment)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSupportInternet" /> @Html.DisplayNameFor(model => model.IsSupportInternet)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SurveyDate" class="control-label"></label>
                <input asp-for="SurveyDate" class="form-control" />
                <span asp-validation-for="SurveyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select">
                    <option>Pending</option>
                    <option>Processing</option>
                    <option>Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="CreatedDate" class="control-label"></label>
            <input asp-for="CreatedDate" class="form-control" />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="UpdatedDate" class="control-label"></label>
            <input asp-for="UpdatedDate" class="form-control" />
            <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label class="control-label">EmployeeId</label>
                <input asp-for="EmployeeRefId" class="form-control" />
                <span asp-validation-for="EmployeeRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CustomerId</label>
                <input asp-for="CustomerRefId" class="form-control" />
                <span asp-validation-for="CustomerRefId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
