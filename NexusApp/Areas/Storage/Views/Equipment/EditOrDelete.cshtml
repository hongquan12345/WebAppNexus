@model NexusApp.Areas.Storage.Models.EquipmentModel

@{
    ViewData["Title"] = "Update Or Delete";
}

<h1>Update Or Delete Equipment</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditOrDelete" method="post">
            <input asp-for="EquipmentId" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serial" class="control-label"></label>
                <input asp-for="Serial" class="form-control" />
                <span asp-validation-for="Serial" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSupportLine" checked /> @Html.DisplayNameFor(model => model.IsSupportLine)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSupportInternet" /> @Html.DisplayNameFor(model => model.IsSupportInternet)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageRefId" class="control-label"></label>
                <select asp-for="StorageRefId" class="form-control" asp-items="ViewBag.noDepartxxy"></select>
            </div>
            <br />
            <div style="display:flex;flex-direction=row">
                <input type="submit" value="Update" name="submit" class="btn btn-primary" /> &emsp; &emsp;
                <input onclick="return confirm('Are you sure to delete?')" type="submit" value="Delete" name="submit" class="btn btn-danger" />
            </div>

        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index">Back to List</a>
</div>

